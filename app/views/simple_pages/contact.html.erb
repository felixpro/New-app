<div class="container form-contact">
  <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 ">
        <h2>Contact</h2>
      </div>
  </div>
  <div class="row">
      <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 col-xs-offset-3">
          <form id="contact-form" class="form" action="#" method="POST" role="form">
              <div class=" form-group-contact">
                  <label class="form-label label-form-contact" for="name">Your Name</label>
                  <input type="text" class="form-control contact-input" id="name" name="name" placeholder="Your name" tabindex="1" required>
              </div>
              <div class="form-group form-group-contact">
                  <label class="form-label label-form-contact" for="email">Your Email</label>
                  <input type="email" class="form-control contact-input" id="email" name="email" placeholder="Your Email" tabindex="2" required>
              </div>
              <div class="form-group form-group-contact">
                  <label class="form-label label-form-contact" for="subject">Subject</label>
                  <input type="text" class="form-control contact-input" id="subject" name="subject" placeholder="Subject" tabindex="3">
              </div>
              <div class="form-group form-group-contact">
                  <label class="form-label label-form-contact" for="message">Message</label>
                  <textarea rows="5" cols="50" name="message" class="form-control textarea-contact contact-input" id="message" placeholder="Message..." tabindex="4" required></textarea>
              </div>
              <div class="text-center">
                  <button type="submit" class="btn btn-start-order">Send Message</button>
              </div>
          </form>
      </div>
  </div>
</div>
