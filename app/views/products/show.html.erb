<p id="notice"><%= notice %></p>
<!-- <h1  class="product-title" align="center">Your product</h1> -->

<div class="container show-product-page">
  <div class="row">
    <div class="col-lg-6 col-md-12">
      <div class="view-product-image">
          <%= image_tag(@product.image_url, class: "img-fluid") %>
       </div>
    </div><!--End col-->
    <div class="col-lg-6 col-md-12 form-input-info">

      <div class="show-description-name">
        <p> <%= @product.name %> </p>
      </div>

      <div class="show-description-cost">
          <p>$<%= @product.price %></p>
      </div>

      <div class="show-description-text">

        <p><%= @product.description %></p>

      </div>

      <p>
        <a class="btn btn-success" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
          Image url
        </a>
      </p>
      <div class="collapse" id="collapseExample">
        <div class="card card-body">
          <p><%= @product.image_url %></p>
        </div>
      </div>
      <hr>

      <ul class="list-group">
        <li>Color:  <span><%= @product.colour %></span> </li>
        <li>Category: <span>Mountain</span></li>
        <li>Tag:  <span>Mountain</span></li>
        <li><p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div> </p>
</li>
      </ul>

      <%= render 'new_comment' %>

      <%= render 'comments' %>


    <!-- <p>The highest comment:&nbsp&nbsp<%= @product.comments.rating_desc.first.body %></p>
    <p>The lowest comment: &nbsp&nbsp<%= @product.comments.rating_asc.first.body %></p> -->


    </div><!--End col-->
  </div>
</div><!--End container-->

<div class="bottom-buttons">
<%= link_to 'Edit', edit_product_path(@product), class: "Edit-link" %> <span>|</span>
<%= link_to 'Back', products_path, class: "Back-link" %>
</div>
